# Discord Bot Configuration
DISCORD_BOT_TOKEN=your_bot_token_here

# Статус бота: idle = нет на месте, BOT_STATUS_ACTIVITY = текст "Смотрит:"
BOT_STATUS_ACTIVITY=Семья San La Murte

# Текст благодарности после завершения ивента
EVENT_GRATITUDE_MESSAGE=Спасибо за участие в мероприятии!

# ID роли для упоминания при создании мероприятия
DISCORD_EVENT_PING_ROLE_ID=role_id_here

# Bot Client ID (для slash команд)
DISCORD_CLIENT_ID=your_client_id_here

# Guild ID (сервер для регистрации команд, опционально)
DISCORD_GUILD_ID=your_guild_id_here

# Админы: ID пользователей (правый клик по нику -> Копировать ID)
DISCORD_ADMIN_USER_IDS=your_user_id

# Роли администраторов (ID через запятую)
DISCORD_ADMIN_ROLE_IDS=role_id_1,role_id_2

# Хранилище событий (json файл)
EVENTS_STORAGE_PATH=./data/events.json

# Папка для логов (logs.txt, errors.txt)
LOGS_DIR=./logs

# Цвета embed (hex без #)
EMBED_COLOR_GREEN=57B99D
EMBED_COLOR_RED=ED4245
EMBED_COLOR_GREY=4F545C
